<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#FFFFFF"
    >

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/profileshape"
        android:src="@drawable/students"



        />
    <EditText
        android:id="@+id/etEmail_id"
        android:hint="Enter Email Name"
        android:inputType="textEmailAddress"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />
    <EditText
        android:id="@+id/etPassword_id"
        android:hint="Enter Password"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        />



    <Button
        android:layout_marginLeft="-70dp"
        android:id="@+id/signIn_btn_id"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="Sign In"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/buttonshape2"


        />

    <Button
        android:layout_marginTop="-45dp"
        android:layout_marginLeft="70dp"
        android:id="@+id/clear_btn_id"
        android:layout_width="120dp"
        android:layout_height="45dp"
        android:text="Clear"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:background="@drawable/buttonshape2"


        />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:id="@+id/progresbar_id"
        />

</LinearLayout>