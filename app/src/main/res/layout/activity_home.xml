<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="14dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/student3"
                android:id="@+id/studentInfo_btn_id"
                android:src="@drawable/border"


                />
            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/payment3"
                android:id="@+id/stuPaymentInfo_btn_id"
                android:src="@drawable/border"

                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/trainer"
                android:id="@+id/trainerInfo_btn_id"
                android:src="@drawable/border"

                />
            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/course"
                android:id="@+id/addCourse_btn_id"
                android:src="@drawable/border"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/schedule"
                android:id="@+id/classSchedule_btn_id"
                android:src="@drawable/border"
                />
            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/time"
                android:id="@+id/classTimeInfo_btn_id"
                android:src="@drawable/border"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/room5"
                android:id="@+id/classRoomInfo_btn_id"
                android:src="@drawable/border"
                />
            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/payment2"
                android:src="@drawable/border"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/student2"
                android:id="@+id/studentInfo_btn_id3"
                android:src="@drawable/border"
                />
            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/course2"
                android:src="@drawable/border"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/course"
                android:id="@+id/studentInfo_btn_id4"
                android:src="@drawable/border"
                />
            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/trainer"
                android:src="@drawable/border"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="horizontal"
            >
            <ImageButton
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/time"
                android:id="@+id/studentInfo_btn_id5"
                android:src="@drawable/border"
                />
            <ImageButton
                android:layout_marginLeft="10dp"
                android:layout_width="160dp"
                android:layout_height="180dp"
                android:background="@drawable/schedule"
                android:src="@drawable/border"
                />
        </LinearLayout>


    </LinearLayout>


</ScrollView>